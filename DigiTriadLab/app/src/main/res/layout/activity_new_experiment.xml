                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_padding"

                android:layout_marginTop="@dimen/small_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:hint="@string/interval"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bluetooth_le_advertise_tx_power_input_layout"
                app:layout_constraintTop_toBottomOf="@id/bluetooth_le_advertise_active_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bluetooth_le_advertise_interval"
                    style="@android:style/Widget.Material.EditText"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>

