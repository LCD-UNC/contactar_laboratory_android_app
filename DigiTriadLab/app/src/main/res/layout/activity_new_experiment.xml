                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/sensors_title"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginTop="@dimen/big_padding"
                android:text="@string/sensor_configuration"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bluetooth_le_active_input_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sensors_active_input_layout"
                style="@style/OutlinedBox.Dense"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"

                android:hint="@string/active_time"
                app:layout_constraintEnd_toEndOf="@id/wifi_active_input_layout"
                app:layout_constraintStart_toStartOf="@id/wifi_active_input_layout"
                app:layout_constraintTop_toBottomOf="@id/sensors_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sensors_active"
                    style="@android:style/Widget.Material.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sensors_inactive_input_layout"
                style="@style/OutlinedBox.Dense"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
