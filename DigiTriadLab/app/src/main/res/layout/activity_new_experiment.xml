                app:layout_constraintTop_toTopOf="@id/cell_title" />

            <Switch
                android:id="@+id/bluetooth_le_advertise_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_padding"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@id/bluetooth_le_advertise_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/bluetooth_le_advertise_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

